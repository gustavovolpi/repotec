{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "**/*.json",
        "outDir": "dist"
      }
    ],
    "watchOptions": {
      "ignored": ["uploads/**/*"]
    },
    "tsConfigPath": "tsconfig.build.json"
  }
}
